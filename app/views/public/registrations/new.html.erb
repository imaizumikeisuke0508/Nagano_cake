<div class="container">
<div class="row">
<div class="col w-auto">
<mark class="bg-light">新規会員登録</mark>
</div>
</div>
<%= form_with model: @customer, url: registration_path(resource_name) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<div class="row p-3">
<div class="col-4">名前</div>
  <div class="col-4">
    <%= f.text_field :last_name, placeholder: '姓' %>
  </div>
  <div class="col-4">
    <%= f.text_field :first_name, placeholder: '名' %>
  </div>
</div>

<div class="row p-3">
<div class="col-4">ふりがな</div>
  <div class="col-4">
    <%= f.text_field :last_name_kana, placeholder: 'セイ' %>
  </div>
  <div class="col-4">
    <%= f.text_field :first_name_kana, placeholder: 'メイ' %>
  </div>
  </div>

<div class="row p-3">
  <div class="col-4">
    <%= f.label :email %>
    </div>
  <div class="col-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
</div>

<div class="row p-3">
  <div class="col-4">
    <%= f.label :postal_code, "郵便番号" %>
  </div>
  <div class="col-4">
    <%= f.text_field :postal_code %>
  </div>
</div>

<div class="row p-3">
  <div class="col-4">
    <%= f.label :adress, "住所" %>
  </div>
  <div class="col-6">
    <%= f.text_field :address, class: 'form-control border-dark' %>
  </div>
</div>

<div class="row p-3">
  <div class="col-4">
    <%= f.label :telephone_number, "電話番号" %>
    </div>
  <div class="col-4">
    <%= f.text_field :telephone_number %>
  </div>
</div>

<div class="row p-3">
  <div class="col-4">
    <% if @minimum_password_length %>
    <em>パスワード(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    </div>
  <div class="col-4">
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
</div>

<div class="row p-3">
  <div class="col-4">
    <em>パスワード(確認用)</em>
    </div>
  <div class="col-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
</div>

<div class="row p-3">
  <div class="col p-3 actions">
    <%= f.submit "新規会員登録", class: "btn btn-success" %>
  </div>
</div>
<mark class="bg-light m-3">
既に登録済みの方
</mark>
<div class="col p-3">
<p>
<%= render "public/shared/links" %>からログインしてください
</p>
</div>

<% end %>

</div>
