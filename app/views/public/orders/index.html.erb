<div class="container">
 <div class="row m-2">
  <div class="col w-auto">
   <mark class="h5 bg-light">注文履歴一覧</mark>
  </div>
 </div>
<div class="row">
 <div class="col-12">
  <table class="table table-bordered">
   <thead class="table-active">
   <th scope="col">注文日</th>
   <th scope="col">配送先</th>
   <th scope="col">注文商品</th>
   <th scope="col">支払金額</th>
   <th scope="col">注文詳細</th>
</thead>
<% @orders.each do |order| %>
<tbody>
<td><%= order.created_at.strftime("%Y-%m-%d") %></td>
<td>
  〒<%= order.post_number %></br>
  <%= order.address %></br>
  <%= order.name %>
  </td>
<td>
<% order.order_details.each do |order_detail| %>
<%= order_detail.item.name %>
<% end %>
</td>
<td><%= order.amount_billed %>円</td>
<td><%= link_to '表示する', public_order_path(order.id),class: "btn btn-primary" %></td>
</tbody>
<% end %>
</table>
</div>
</div>
<%= paginate @orders %>
</div>