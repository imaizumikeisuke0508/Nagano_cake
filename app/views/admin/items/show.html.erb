<div class="container">

<div class="row m-4">
<div class="col w-auto">
<mark class="bg-light">商品詳細</mark>
</div>
</div>

<div class="row justify-content-center m-4">
<div class="col-4">
<%= image_tag @item.image, size: "200x150" %>
</div>
<div class="col-8">
<div class="row">
<div class="col-3">商品名</div><div class="col-8"><%= @item.name %></div>
</div>
<div class="row">
<div class="col-3">商品説明</div><div class="col-8"><%= @item.introduction %></div>
</div>
<div class="row">
<div class="col-3　nowrap">税込み価格</div><div class="col-8"><%= @item.price %></div>
</div>
</div>
</div>

<div class="row justify-content-center m-4">
<div class="col-4"><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %></div>
</div>

</div>