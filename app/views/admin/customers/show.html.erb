<div class="container">
<div class="row m-4">
<div class="col w-auto">
<mark class="h5 bg-light"><%= (@customer.last_name + @customer.first_name) %>さんの会員詳細</mark>
</div>
</div>

<div class="row m-4">
<div class="col-3">会員ID</div><div class="col-9"><%= @customer.id %></div>
</div>
<div class="row m-4">
<div class="col-3">氏名</div><div class="col-9"><%= (@customer.last_name + @customer.first_name) %></div>
</div>
<div class="row m-4">
<div class="col-3">ふりがな</div><div class="col-9"><%= (@customer.last_name_kana + @customer.first_name_kana) %></div>
</div><div class="row m-4">
<div class="col-3">郵便番号</div><div class="col-9"><%= @customer.postal_code %></div>
</div><div class="row m-4">
<div class="col-3">電話番号</div><div class="col-9"><%= @customer.telephone_number %></div>
</div><div class="row m-4">
<div class="col-3">住所</div><div class="col-9"><%= @customer.address %></div>
</div>
<div class="row m-4">
<div class="col-3">メールアドレス</div><div class="col-9"><%= @customer.email %></div>
</div>
<div class="row m-4">
<div class="col-3">会員ステータス</div><div class="col-9">
<% if @customer.is_deleted == false %>
 <p>有効</p>
 <% else %>
 <p>退会済</p>
<% end %></div>
</div>
<div class="row m-4">
<div class="col"><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %></div>
<div class="col"><%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-primary" %></div>
</div>


</div>