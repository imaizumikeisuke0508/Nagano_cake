<div class="container">

<div class="row m-4">
  <div class="col w-auto">
   <mark class="h5 bg-light"><%= (@customer.last_name + @customer.first_name) %>さんの会員情報編集</mark>
  </div>
 </div>


<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
<div class="row m-2 justify-content-around">
  <div class="col-3">会員ID</div><div class="col-3"><%= @customer.id %></div><div class="col-3"></div>
</div>
<div class="row m-2 justify-content-around">
  <div class="col-3">氏名</div><div class="col-3"><%= f.text_field :last_name %></div><div class="col-3"> <%= f.text_field :first_name %></div>
</div>
<div class="row m-2 justify-content-around">
  <div class="col-3">氏名</div><div class="col-3"><%= f.text_field :last_name_kana %></div><div class="col-3"> <%= f.text_field :first_name_kana %></div>
</div>
<div class="row m-2 justify-content-around">
  <div class="col-3">郵便番号</div><div class="col-3"><%= f.text_field :postal_code %></div><div class="col-3"></div>
</div><div class="row m-2 justify-content-around">
  <div class="col-3">住所</div><div class="col-5"><%= f.text_field :address, class: "form-control border-dark" %></div><div class="col-1"></div>
</div>
<div class="row m-2 justify-content-around">
  <div class="col-3">電話番号</div><div class="col-3"><%= f.text_field :telephone_number %></div><div class="col-3"></div>
</div>
<div class="row m-2 justify-content-around">
  <div class="col-3">メールアドレス</div><div class="col-3"><%= f.text_field :email %></div><div class="col-3"></div>
</div>
<div class="row m-2 justify-content-around">
  <div class="col-3">会員ステータス</div><div class="col-3"> </div><div class="col-3"></div>
</div>

<div class="row m-2 justify-content-center">
<%= f.submit "変更を保存", class: "btn btn-success" %>
</div>
<% end %>
</div>